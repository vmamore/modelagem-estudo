@model IEnumerable<ClienteViewModel>
@{
    ViewData["Title"] = "Início";
}

<div class="row">
    <h1 class="display-4">Início</h1>
    <a asp-controller="Clientes" asp-action="Criar" class="btn btn-outline-dark ml-auto">Criar</a>
</div>
<table class="table">
    <thead>
        <tr>
            <td>Nome</td>
            <td>Sobrenome</td>
            <td>CPF</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
        <tr>
            <td>@cliente.Nome</td>
            <td>@cliente.Sobrenome</td>
            <td>@cliente.CPF</td>
            <td>
                <a asp-controller="Clientes" asp-action="Editar" asp-route-id="@cliente.Id">Editar</a> |
                <a asp-controller="Clientes" asp-action="Detalhes" asp-route-id="@cliente.Id">Detalhes</a> |
                <a asp-controller="Clientes" asp-action="Remover" asp-route-id="@cliente.Id">Remover</a>
            </td>
        </tr>
        }
    </tbody>
</table>

