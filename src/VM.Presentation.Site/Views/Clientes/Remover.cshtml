@model ClienteViewModel

@{
    ViewData["Title"] = "Remover";
}

<div class="row d-flex align-items-center">
    <h1 class="display-4">Remover</h1>
    <a asp-action="Index" class="btn btn-outline-warning ml-auto">Voltar para Início</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" disabled />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control" disabled />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCadastro" class="control-label"></label>
                <input asp-for="DataCadastro" class="form-control" disabled />
                <span asp-validation-for="DataCadastro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDeNascimento" class="control-label"></label>
                <input asp-for="DataDeNascimento" class="form-control" disabled />
                <span asp-validation-for="DataDeNascimento" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" disabled /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
        </form>
        <form asp-action="RemoverCliente">
            <input asp-for="Id" class="form-control" hidden />
            <div class="form-group">
                <input type="submit" value="Remover" class="btn btn-outline-danger" />
                
            </div>
        </form>
    </div>
</div>

